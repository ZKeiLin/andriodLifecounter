<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="@string/instruction"
            android:layout_width="371dp"
            android:layout_height="32dp"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="66dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp" android:textAlignment="center"/>
    <TableLayout
            android:layout_width="369dp"
            android:layout_height="462dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="@string/player_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/player_1" android:textSize="20sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/credit" android:textSize="20sp"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="392dp"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:gravity="center" android:clipToPadding="false"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            android:id="@+id/linearLayout">
        <Spinner
                android:layout_height="50dp" tools:layout_editor_absoluteY="71dp"
                tools:layout_editor_absoluteX="11dp" android:id="@+id/playerSelector" android:layout_marginEnd="5dp"
                android:spinnerMode="dropdown"
                android:theme="@android:style/Widget.Material.Light.DropDownItem.Spinner" android:layout_width="150dp"/>
        <Button
                android:text="@string/puls5"
                android:layout_width="50dp"
                tools:layout_editor_absoluteY="43dp"
                tools:layout_editor_absoluteX="33dp" android:id="@+id/plus5"
                android:textAlignment="center"
                style="@style/Widget.AppCompat.Button.Colored" android:textColor="@android:color/white"
                android:textSize="20sp" android:layout_marginEnd="10dp" android:layout_height="50dp" android:tag="1"/>
        <Button
                android:text="@string/plus1"
                android:layout_width="50dp"
                tools:layout_editor_absoluteY="50dp"
                tools:layout_editor_absoluteX="116dp" android:id="@+id/plus" android:layout_height="50dp"
                android:textAlignment="center"
                style="@style/Widget.AppCompat.Button.Colored" android:textColor="@android:color/white"
                android:textSize="20sp" android:layout_marginEnd="10dp" android:tag="2"/>
        <Button
                android:text="@string/minus"
                android:layout_width="50dp"
                tools:layout_editor_absoluteY="50dp"
                tools:layout_editor_absoluteX="304dp" android:id="@+id/minus" android:layout_height="50dp"
                android:textAlignment="center"
                style="@style/Widget.AppCompat.Button.Colored" android:textColor="@android:color/white"
                android:textSize="20sp" android:layout_marginEnd="10dp" android:tag="3"/>
        <Button
                android:text="@string/minus5"
                android:layout_width="50dp"
                tools:layout_editor_absoluteY="50dp"
                tools:layout_editor_absoluteX="203dp" android:id="@+id/minus5" android:layout_height="50dp"
                android:textAlignment="center" style="@style/Widget.AppCompat.Button.Colored"
                android:textColor="@android:color/white" android:textSize="20sp" android:tag="4"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>